<div class="container mt-5">
  <div class="card p-4">
    <div class="card-body">
      <!-- Pregunta -->
      <p class="card-text"><%= params[:question] %></p>
      <p class="card-text text-muted">- You</p>

      <hr>

      <!-- Respuesta -->
      <div class="bg-warning p-2 rounded">
        <p class="card-text"><%= @answer %></p>
        <p class="card-text text-muted">- Your coach</p>
      </div>
      <br>
      <div >
      <%= link_to "Ask a new question", ask_path, class: "btn btn-primary" %>
      </div>
    </div>

  </div>
</div>
